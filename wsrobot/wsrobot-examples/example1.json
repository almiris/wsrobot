{
	// global properties
	"properties" : { 
		"baseURL" : "http://localhost:8080/wsrobot-webapp",
		"robot" : "robot"
	},
	
	// services
	"services" : {
		"sayHello" : { "name" : "Say Hello", "url" : "$baseURL$/tests/sayHello?to={0}", "method" : "get", "headers" : { "Accept" : "application/json"}, "jresults" : { "server" : "$.from"} },
		"thankYou" : { "name" : "Echo", "url" : "$baseURL$/tests/thankYou/{0}", "method" : "get", "headers" : {"From-Header" : "$robot$"} }
	},
	
	// scenarios
	"scenarios" : [
	
		// hello
		{ 
			"name" : "A very simple scenario",
			"active" : "true",
			"steps" : [				
				{ "service" : "sayHello", "params" : [ "$robot$" ], "status" : 200, "jcontrols" : { "$.message" : "Hello $robot$!"} },
				{ "service" : "thankYou", "params" : [ "$server$" ], "status" : 200, "jcontrols" : { "$.message" : "You're welcome $robot$!", "$.from" : "$server$"} }
			]
		}
		
	]
}
